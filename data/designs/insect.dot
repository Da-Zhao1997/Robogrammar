digraph hexapod {
  // Generates a hexapedal robot with lateral symmetry.
  // Each pair of legs can be of a different design.

  subgraph L {
    robot [label="robot"];
  }

  subgraph R {
    body [link_shape=capsule, joint_type=free, length=0.5];
    leg_design1, leg_design2, leg_design3 [label="leg_design"];

    body -> leg_design1 [offset=0.0, axis_angle="0 1 0 90"];
    body -> leg_design1 [offset=0.0, axis_angle="0 1 0 -90", mirror=true];
    body -> leg_design2 [offset=0.5, axis_angle="0 1 0 90"];
    body -> leg_design2 [offset=0.5, axis_angle="0 1 0 -90", mirror=true];
    body -> leg_design3 [offset=1.0, axis_angle="0 1 0 90"];
    body -> leg_design3 [offset=1.0, axis_angle="0 1 0 -90", mirror=true];
  }
}

digraph simple_leg_design {
  // A simple leg design with two hinge joints.

  subgraph L {
    leg_design [label="leg_design"];

    subgraph edges1 {
      any_node1 -> leg_design;
    }
  }

  subgraph R {
    proximal, distal [link_shape=capsule, joint_type=hinge, joint_axis="0 1 0",
                      length=0.2];

    any_node1 -> proximal [group="edges1"];
    proximal -> distal;
  }
}

digraph spider_leg_design {
  subgraph L {
    leg_design [label="leg_design"];

    subgraph edges1 {
      any_node1 -> leg_design;
    }
  }

  subgraph R {
    node [link_shape=capsule];
    femur [joint_type=hinge, joint_axis="0 1 0", length=0.2];
    tibia [joint_type=hinge, joint_axis="0 0 1", length=0.2];
    metatarsus [joint_type=hinge, joint_axis="0 0 1", length=0.2];
    tarsus [joint_type=fixed, length=0.05];

    any_node1 -> femur [group="edges1"];
    femur -> tibia [axis_angle="0 0 1 60"];
    tibia -> metatarsus [axis_angle="0 0 1 60"];
    metatarsus -> tarsus [axis_angle="0 0 1 -45"];
  }
}
